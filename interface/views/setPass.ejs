<% include partials/header.ejs %>

<% if(message) { %>
<script>
    var message = JSON.parse(("<%= message %>").split("&#34;").join("\""));
        if(!message.token || message.token === "" ){
           // window.location.href = "/";
        }
        setCookie("pass_token", message.token, 1);
    </script>
<% } %>

<script src="/js/setPass.js"></script>
</head>

<body>
        <%- include('partials/navbar', {
            home: true,
            login: true,
            plan: false,
            account: false
        }); %>

    <div id="loader" class="container row">
        <img class="hexerve" src="/hexerve.png" />
    </div>

    <div class="fixed-top body-container body-top-container container"  style="display:none">
        <div class="row login-row">
            <div class="col-md-2 login">

            </div>
            <div class="col-md-8 login">
                <div class="container">
                    <div id="pass-msg"></div>
                    <form>
                        <div class="input-group mb-3 input-group-lg container">
                            <div class="input-group-prepend">
                                <span class="input-group-text">New Password</span>
                            </div>
                            <input type="password" class="form-control" id="pass" placeholder="password">
                        </div>
                        <div class="input-group mb-3 input-group-lg container">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Confirm Password</span>
                            </div>
                            <input type="password" class="form-control" id="conf_pass" placeholder="password">
                        </div>
                        <div class="wrapper text-center">
                            <div class="btn-group btn-group-lg">
                                <button type="button" id="reset_btn" class="btn wobble-vertical">Reset Password</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-2 login">

            </div>
        </div>
    </div>

    <footer class="footer fixed-bottom fill-content text-light">
        <% include partials/footer.ejs %>
</body>

</html>