<% include partials/header.ejs %>
<script src="/js/admin.js"></script>
</head>

<body>
	<%- include('partials/navbar', {
			home: true,
			login: false,
			plan: true,
			account: true
		}); %>

	<div id="loader" class="container row">
		<img class="hexerve" src="/Hexerve.png" />
	</div>
	<br />
	<br />
	<div class="body-container container" style="display:none">
		<div class="row">
			<div class="col-md-6">
				<div id="search-msg"></div>
				<form>
					<div class="input-group mb-3 input-group-lg container">
						<div class="input-group-prepend">
							<span class="input-group-text">Email</span>
						</div>
						<input type="text" class="form-control" name="email" id="email" placeholder="example@gmail.com">
					</div>
					<div class="wrapper text-center">
						<div class="btn-group btn-group-lg">
							<button type="button" id="search-btn" class="btn wobble-vertical">Search</button>
						</div>
					</div>
				</form>
				<br />
				<br />
				<br />
			</div>

			<div class="col-md-6">
				<div id="list-msg"></div>
				<form>
					<div class="input-group mb-3 input-group-lg container">
						<div class="input-group-prepend">
							<span class="input-group-text">Email</span>
						</div>
						<input type="text" class="form-control" name="email1" id="email1" placeholder="example@gmail.com">
					</div>
					<div class="input-group mb-3 input-group-lg container">
						<div class="input-group-prepend">
							<span class="input-group-text">Name</span>
						</div>
						<input type="text" class="form-control" name="name" id="name" placeholder="name">
					</div>
					<div class="input-group mb-3 input-group-lg container">
						<div class="input-group-prepend">
							<span class="input-group-text">Plan</span>
						</div>
						<select class="form-control" id="plan">
							<option value="lite">Lite</option>
							<option value="professional">Professional</option>
							<option value="enterprise">Enterprise</option>
						</select>
					</div>
					<div class="input-group mb-3 input-group-lg container">
						<div class="input-group-prepend">
							<span class="input-group-text">Plan Ends (Days)</span>
						</div>
						<input type="number" class="form-control" name="days" id="days" placeholder="30">
						<div class="input-group-append">
							<span class="input-group-text"><a href="#" id="timestamp" data-toggle="tooltip" title="">Date?</a></span>
						</div>
						
					</div>
					<div class="input-group mb-3 input-group-lg container">
						<div class="input-group-prepend">
							<span class="input-group-text">Make Admin</span>
						</div>
						<select class="form-control" id="isadmin">
							<option value="true">Yes</option>
							<option value="false">No</option>
						</select>
					</div>
					<div class="wrapper text-center">
						<div class="btn-group btn-group-lg">
							<button type="button" id="update-btn" class="btn wobble-vertical">Update</button>
						</div>
					</div>
				</form>

			</div>
		</div>

	</div>

	<footer class="footer fixed-bottom text-light">
		<% include partials/footer.ejs %>
</body>

</html>